{
  "manifest_version": 3,
  "name": "ShareTube",
  "version": "0.0.2",
  "description": "Synchronize YouTube playback with friends. Watch videos together in real-time with shared play, pause, and queue controls.",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "16": "shared/assets/icons/icon-16.png",
    "32": "shared/assets/icons/icon-32.png",
    "48": "shared/assets/icons/icon-48.png",
    "128": "shared/assets/icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/ui.html",
    "default_title": "ShareTube",
    "default_icon": {
      "16": "shared/assets/icons/icon-16.png",
      "32": "shared/assets/icons/icon-32.png",
      "48": "shared/assets/icons/icon-48.png",
      "128": "shared/assets/icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "runtime/contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "runtime/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "appshell/*",
        "shared/*"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*",
        "https://youtube.com/*"
      ]
    }
  ]
}