{
  "name": "extension-tests",
  "version": "0.1.0",
  "private": true,
  "description": "E2E tests for YouTube iframe MV3 extension using Playwright",
  "scripts": {
    "browsers:install": "bash ./scripts/install_chromium.sh",
    "test": "node ./node_modules/@playwright/test/cli.js test --headed --workers=1",
    "test:headed": "node ./node_modules/@playwright/test/cli.js test --headed --workers=1",
    "test:install": "node ./node_modules/@playwright/test/cli.js install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@types/node": "^24.7.2",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "npx": "^10.2.2",
    "playwright": "^1.56.0"
  }
}
